fun main(i : integer) : integer = (
	put_str('Rotation: '),
	{ r = get_int(r) },
	put_str('Input: '),
	{ s = get_str(s) },

	{ c = 1 },
	{ i = 0 },
	{ while c != 0 : (
		{ c = get_char_at(s, i) },

		# Uppercase letters.
		{ if 65 <= c & c <= 90 then (
		    { c = c + r },
		    # Wrap around.
		    { if c > 90 then { c = c - 26 } }
		) },

		# Lowercase letters.
		{ if 97 <= c & c <= 122 then (
		    { c = c + r },
		    # Wrap around.
		    { if c > 122 then { c = c - 26 } }
	    ) },

		put_char_at(s, c, i),
		{ i = i + 1 }
	) },

	put_str('Output: '),
	put_str(s),
	put_nl(1),

	0
)
{ where var r : integer; var s : string; var c : integer; var i : integer }
